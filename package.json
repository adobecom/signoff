{
  "name": "signoff",
  "version": "1.0.0",
  "scripts": {
    "test": "playwright test --workers 2",
    "int": "wtr \"./test/**/*.int.(js|html)\" --node-resolve --port=2000 --concurrent-browsers 3 --config wtr-integration.config.mjs",
    "int:file": "wtr --node-resolve --port=2000 --concurrent-browsers 3 --config wtr-integration.config.mjs",
    "int:file:watch": "npm run int:file -- --watch",
    "postinstall": "npm update browserstack-node-sdk",
    "int-browserstack": "browserstack-node-sdk wtr \"./test/**/*.int.(js|html)\" --node-resolve --port=2000 --concurrent-browsers 3 --config wtr-integration.config.mjs",
    "int:file-browserstack": "browserstack-node-sdk wtr --node-resolve --port=2000 --concurrent-browsers 3 --config wtr-integration.config.mjs",
    "test-browserstack": "browserstack-node-sdk playwright test --workers 2",
    "wdio": "wdio run ./wdio.conf.js"
  },
  "author": "Adobe",
  "license": "Apache License 2.0",
  "dependencies": {
    "@rollup/plugin-replace": "5.0.5",
    "@wdio/cli": "^9.20.0",
    "@web/test-runner": "^0.20.2",
    "@web/test-runner-commands": "^0.9.0",
    "@web/test-runner-playwright": "^0.11.1",
    "dotenv": "^17.2.2",
    "js-yaml": "^4.1.0",
    "playwright": "^1.55.1",
    "sinon": "^17.0.1",
    "sync-fetch": "^0.5.2"
  },
  "devDependencies": {
    "@playwright/test": "^1.55.1",
    "@types/node": "^24.5.2",
    "@wdio/appium-service": "^9.20.0",
    "@wdio/local-runner": "^9.20.0",
    "@wdio/mocha-framework": "^9.20.0",
    "@wdio/spec-reporter": "^9.20.0",
    "appium": "^3.1.0",
    "appium-xcuitest-driver": "^10.1.6",
    "appium-uiautomator2-driver": "^5.0.5",
    "browserstack-node-sdk": "^1.45.3"
  }
}
